#Platform ?= macOS ;
PlatformArch_windows ?= x86_64 ;
PlatformSpec_windows ?= clang ;

Root    ?= ../../.. ;
Location = samples/testGI/prog ;

UseD3DMulti ?= yes ;

include $(Root)/prog/_jBuild/defaults.jam ;

TargetType  = exe ;
Target      = samples/testGI-$(LegacyPlatformSuffix) ;

if $(UseWholeOpt) != yes {
  UseLLDLink ?= yes ;
}

if $(Platform)-$(PlatformArch) in windows-x86_64 linux-x86_64 || $(Platform) in ps5 scarlett {
  BVHSupport = yes ;
  BVHRi = no ;
  BVHRandomGrass = no ;
  BVHGpuObjects = no ;
  BVHDynRend = no ;
  BVHFx = no ;
  BVHCables = no ;
}

OutDir = $(Root)/$(Location)/../game ;

AddIncludes =
  $(Root)/prog/samples/commonFramework
  $(Root)/prog/gameLibs/publicInclude 
;

Sources =
#  perlinNoise.cpp
  heightmapMetricsCulling.cpp
  level.cpp
  lmesh.cpp
  test_app.cpp
  test_main.cpp
;

UseProgLibs =
  engine/osApiWrappers
  engine/kernel
  engine/ioSys
  engine/startup
  engine/baseUtil
  engine/coreUtil
  engine/math
  engine/lib3d
  engine/image
  engine/shaders
  engine/workCycle
  engine/guiBase
  engine/scene
  engine/sceneRay

  engine/gameRes
  engine/perfMon
  engine/streaming

  samples/commonFramework


  gameLibs/daSWRT
  gameLibs/render/lruCollision
  gameLibs/webui
  gameLibs/daSkies2
  gameLibs/render
  gameLibs/visualConsole
  gameLibs/fftWater
  gameLibs/heightmap
  gameLibs/landMesh
  engine/consoleProc
