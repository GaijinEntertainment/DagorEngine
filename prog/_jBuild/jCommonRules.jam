rule StripStrings # in_string_list : in_string_list_to_strip
{
  if $(2) {
    local filtered = ;
    for s in $(1) { if ! $(s) in $(2) { filtered += $(s) ; } }
    return $(filtered) ;
  }
  return $(1) ;
}
