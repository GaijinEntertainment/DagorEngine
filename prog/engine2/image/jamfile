  regImageLoadAvif.cpp
;

if ( $(Platform) in win32 win64 ps4 ps5 macosx linux64 xboxOne scarlett nswitch android ) {
  Sources +=
    dxtCompress.cpp
  ;
  UseProgLibs +=
    3rdPartyLibs/convert/fastDXT
  ;
