  pngrutil.c
  pngset.c
  pngtrans.c
  pngwio.c
  pngwrite.c
  pngwtran.c
  pngwutil.c
;

CPPopt = -D__B_CORE -DPNG_NO_CONSOLE_IO -DPNG_NO_WRITE_FLUSH ;

if $(Platform) in win64 xboxOne scarlett { Copt += /wd4267 ; }

include $(Root)/prog/_jBuild/build.jam ;
