if $(HaveRenderer) = yes {
  UseProgLibs += gameLibs/render/lensFlare ;

  AllSrcFolder_ES += render ;
  AllSrcFolder_CPP += render ;
}

include $(Root)/prog/daNetGameLibs/build_module.jam ;